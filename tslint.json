{
  "extends": "tslint-config-airbnb",
  "rules": {
    "max-line-length": [
      true,
      200
    ],
    "trailing-comma": [
      false, {"multiline": "never", "singleline": "never"}
    ],
    "triple-equals": [
      false,
      "allow-null-check"
    ],
    "comment-format": [
        true,
        "check-space"
    ],
    "no-duplicate-variable": true,
    "no-trailing-whitespace": true,
    "no-var-keyword": true,
    "quotemark": [
        true,
        "single"
    ],
    "semicolon": [true],
    "typedef-whitespace": [
        true,
        {
            "call-signature": "nospace",
            "index-signature": "nospace",
            "parameter": "nospace",
            "property-declaration": "nospace",
            "variable-declaration": "nospace"
        }
    ],
    "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type"
    ],
    "eofline": false
  }
}